/* app.wxss - 全局样式 */

/* 全局变量 - 白天模式配色：浅色简约淡色系（默认） */
page {
  --background: #ffffff;
  --foreground: #1a1a1a;
  --card: #f8f8f8;
  --card-foreground: #1a1a1a;
  --primary: #2563eb;
  --primary-foreground: #ffffff;
  --secondary: #f0f0f0;
  --secondary-foreground: #1a1a1a;
  --muted: #e5e5e5;
  --muted-foreground: #666666;
  --accent: #3b82f6;
  --accent-foreground: #ffffff;
  --border: #e0e0e0;
  
  background-color: var(--background);
  color: var(--foreground);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: 16px;
  line-height: 1.5;
}

/* 夜间模式配色：科技感深蓝/黑色 + 霓虹蓝/青绿 */
.dark {
  --background: #0a0e27;
  --foreground: #f5f5f5;
  --card: #1a1f3a;
  --card-foreground: #f5f5f5;
  --primary: #00d4ff;
  --primary-foreground: #0a0e27;
  --secondary: #1a1f3a;
  --secondary-foreground: #f5f5f5;
  --muted: #2a2f4a;
  --muted-foreground: #999aaa;
  --accent: #00ff88;
  --accent-foreground: #0a0e27;
  --border: #2a2f4a;
}

/* 全局通用样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--background);
}

.bg-background {
  background-color: var(--background);
}

.bg-card {
  background-color: var(--card);
}

.bg-muted {
  background-color: var(--muted);
}

.bg-primary {
  background-color: var(--primary);
}

.bg-accent {
  background-color: var(--accent);
}

.text-foreground {
  color: var(--foreground);
}

.text-card-foreground {
  color: var(--card-foreground);
}

.text-primary {
  color: var(--primary);
}

.text-accent {
  color: var(--accent);
}

.text-muted-foreground {
  color: var(--muted-foreground);
}

.border-border {
  border-color: var(--border);
}

/* 发光效果 */
.glow-primary {
  box-shadow: 0 0 20rpx rgba(0, 212, 255, 0.4);
}

.glow-accent {
  box-shadow: 0 0 20rpx rgba(0, 255, 136, 0.4);
}

/* 通用工具类 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-around {
  justify-content: space-around;
}

.rounded-lg {
  border-radius: 8rpx;
}

.rounded-xl {
  border-radius: 12rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

.shadow-lg {
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
}

.font-bold {
  font-weight: bold;
}

.font-semibold {
  font-weight: 600;
}

.font-medium {
  font-weight: 500;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
}



